<%- include('partials/header.ejs'); -%>

<div class="container">
    <div class="container d-flex flex-wrap justify-content-center">
        <h2 >What book did you read?</h2>
    </div>
    
    <form>
    <div class="mb-3">
      <label for="bookTitle" class="form-label">Book Title</label>
      <input type="text" class="form-control" id="bookTitle"  name="title">
    </div>
    <div class="mb-3">
        <label for="bookAuthor" class="form-label">Author</label>
        <input type="text" class="form-control" id="bookAuthor"  name="author">
    </div>
    <div class="mb-3">
        <label for="bookDate" class="form-label">When did you finish it?</label>
        <input type="date" class="form-control" id="bookDate"  name="readDate">
    </div>
    <div class="mb-3">
        <label for="bookSummary" class="form-label">Opinion</label>
        <input type="text" class="form-control" id="bookSummary"  name="summary">
    </div>
    <div class="mb-3">
        <label for="bookScore" class="form-label">Score</label>
        <input type="number" class="form-control" id="bookScore"  name="score">
    </div>

    <div class="container d-flex flex-wrap justify-content-center">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
    
  </form>
</div>


<%- include('partials/footer.ejs'); -%>